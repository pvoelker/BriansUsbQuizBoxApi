<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Brian's USB Quiz Box Communication Protocol API</Title>
    <Copyright>Copyright © 2025 Paul Voelker</Copyright>
    <Description>An API for interfacing with quiz boxes implementing the Brian's Quiz Box Communication Protocol</Description>
    <RepositoryUrl>https://github.com/pvoelker/BriansUsbQuizBoxApi</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags></PackageTags>
    <IncludeSymbols>True</IncludeSymbols>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Version>1.1.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.1.11.0</FileVersion>
    <PackageId>BriansUsbQuizBoxApi</PackageId>
    <Authors>HerrVlkr</Authors>
    <Company>Paul Voelker</Company>
    <Product>Brian's USB Quiz Box Communication Protocol API</Product>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HidSharp" Version="2.6.4" />
  </ItemGroup>

</Project>
